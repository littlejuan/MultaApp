<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:text="Propietario"
            style="@style/CategoryStyle" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:paddingLeft="4dp"
            android:orientation="vertical">

            <EditText
                android:hint="CÃ©dula"
                android:id="@+id/edit_cedulapro"
                android:inputType="number"
                style="@style/EditorFieldStyle" />
            <EditText
                android:hint="Nombre"
                android:lines="1"
                android:id="@+id/edit_nombre"
                android:inputType="textCapWords"
                style="@style/EditorFieldStyle" />
            <EditText
                android:hint="Apellido"
                android:id="@+id/edit_apellido"
                android:inputType="textCapWords"
                style="@style/EditorFieldStyle" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_insertar"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Insertar"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_propietario_buscar"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:layout_gravity="center_vertical" />
        <Button
            android:id="@+id/btn_propietario_alterar"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Alterar"
            android:layout_gravity="center_vertical" />
        <Button
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Eliminar"
            android:id="@+id/btn_propietario_eliminar"
            />
    </LinearLayout>
</LinearLayout>